%h2 Login
%span.register
  First time here?
  = link_to "Register", register_path
- @user_session.errors.each do |attribute, message|
  - if attribute == :base
    %p.error= "#{message.humanize}"
  -else
    %p.error= "#{attribute.to_s.humanize} #{message}"
= form_for @user_session do |form|
  %ol.form_list
    %li
      = form.label :username, "Username"
      = form.text_field :username
    %li
      = form.label :password, "Password"
      = form.password_field :password
    %li= form.submit "Submit"